<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:clickable="false"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:contentDescription="@string/content_description_image_category"
            android:scaleType="centerCrop"
            tools:src="@drawable/bcg_categories" />

        <TextView
            android:id="@+id/tvCategoryTitle"
            style="@style/StyleRecyclerViewItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Название" />

        <TextView
            android:id="@+id/tvCategoryDescription"
            style="@style/StyleRecyclerViewItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="описание категории описание категории описание категории описание категории" />
    </LinearLayout>


</androidx.cardview.widget.CardView>