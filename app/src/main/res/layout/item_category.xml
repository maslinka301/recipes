<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/_8dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="@dimen/_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:contentDescription="@string/content_description_image_category"
            tools:src="@drawable/bcg_categories"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tvCategoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Название"
            style="@style/StyleRecyclerViewItemTitle"/>
        <TextView
            android:id="@+id/tvCategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="описание категории описание категории описание категории описание категории"
            style="@style/StyleRecyclerViewItemDescription"/>
    </LinearLayout>



</androidx.cardview.widget.CardView>