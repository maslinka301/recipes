<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/_8dp</item>
        <item name="android:textAppearance">@style/StyleTitle14</item>
    </style>

    <style name="StyleTitleCategory" parent="TextAppearance.AppCompat">
        <item name="android:layout_margin">@dimen/_16dp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:textColor">@color/titleCategoryColor</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="StyleRecyclerViewItemTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/titleCategoryColor</item>
        <item name="android:layout_margin">@dimen/_8dp</item>
    </style>

    <style name="StyleRecyclerViewItemDescription" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:layout_marginHorizontal">@dimen/_8dp</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
        <item name="android:textColor">@color/descriptionCategoryColor</item>
    </style>

    <style name="StyleOfTitleInRecipeFragment" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/titleOnRecipeFragmentColor</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="StyleIngredientsListItems" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/descriptionCategoryColor</item>
    </style>

    <style name="StyleMethodListItems" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/descriptionCategoryColor</item>
    </style>

    <style name="StyleServingsNumber" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/servingsColor</item>
    </style>

    <style name="StyleSeekBar" parent="TextAppearance.AppCompat">
        <item name="android:min">1</item>
        <item name="android:max">5</item>
        <item name="android:layout_marginBottom">@dimen/_16dp</item>
    </style>
    
    <style name="HeartButtonStyle">
        <item name="android:layout_margin">@dimen/_16dp</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="EmptyFavouritesTextStyle">
        <item name="android:text">@string/favourite_list_is_empty</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:layout_margin">@dimen/_16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/descriptionCategoryColor</item>
    </style>

</resources>